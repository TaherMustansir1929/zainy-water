{
  "functions": {
    "app/**/*.js": {
      "includeFiles": "node_modules/.prisma/client/**"
    }
  },
  "build": {
    "env": {
      "PRISMA_CLIENT_ENGINE_TYPE": "library",
      "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-3.0.x"
    }
  },
  "installCommand": "bun install && bunx prisma generate"
}